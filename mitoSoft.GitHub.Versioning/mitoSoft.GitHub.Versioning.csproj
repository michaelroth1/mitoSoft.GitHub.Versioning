<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Version>1.0.0</Version>
    <Authors>mitoSoft</Authors>
    <Description>Small library to compare an assembly version with a git release version to check if a update of your executable is neccessary.</Description>
    <Copyright>(c)mitoSoft</Copyright>
    <PackageProjectUrl>https://github.com/michaelroth1/mitoSoft.GitHub.Versioning</PackageProjectUrl>
    <PackageIcon>mitoSoft.png</PackageIcon>
    <RepositoryUrl>https://github.com/michaelroth1/mitoSoft.GitHub.Versioning</RepositoryUrl>
    <PackageTags>Octokit versioning versioncomparer</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Octokit" Version="0.50.0" />
  </ItemGroup>

  <ItemGroup>
    <None Update="mitoSoft.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
